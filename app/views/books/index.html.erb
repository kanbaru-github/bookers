
  <body>

    <%= flash[:notice]%>

    <% if @book.errors.any? %>
      error
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    <% end %>

    <p id="notice"></p>
    <h1>Books</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
          	<!--結合するセルの数。今回は3-->
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><span><%= book.title %></span></td>
          <td><span><%= book.body %></span></td>
          <td><span><%= link_to "Show", book_path(book) %></span></td>
          <td><span><%= link_to "Edit", edit_book_path(book) %></span></td>
          <td><span><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %></span></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <h2>New book</h2>
    <%= form_with model: @book, url:'/books', local:true do |f| %>
      Title
      <%= f.text_field :title, class:'form' %>
      Body
      <%= f.text_area :body, class:'form' %>
      <br>
      <div><%= f.submit 'Create Book', class:'block' %></div>
    <% end %>
  </body>
</html>
